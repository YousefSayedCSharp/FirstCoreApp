@model List<News>

@{
    ViewData["Title"] = "News";
}

<section id="about" class="about">
    <div class="container aos-init aos-animate" data-aos="fade-up">

        <div class="section-title">
            <h2>@ViewBag.category</h2>
            <p>@ViewBag.description</p>
        </div>

        <center>
            @foreach (var item in Model)
            {
                <div class="row">
                    <div class="col-12 aos-init aos-animate" data-aos="fade-right">
                        <img src="~/Images/News/@item.Image" class="img-fluid" alt="@item.Title" style="border-radius:50%;width:200px;height:200;" />
                    </div>
                    <div class="col-sm-12 pt-4 pt-lg-0 content aos-init aos-animate" data-aos="fade-left">
                        <h3>@item.Title</h3>
                        <h6>@item.Date</h6>
                        <p class="font-italic">
                                                                                     @item.Topic.ToString().Substring(0, 20)
                            <div><a href="/home/new/@item.Id" class="btn btn-success">More</a></div>
                        </p>
                    </div>
                </div><hr class="bg-white" />
            }
        </center>
        <!---->
    </div>
</section>